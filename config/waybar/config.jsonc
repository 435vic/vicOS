{
    "layer": "top",
    "position": "top",
    "mode": "dock",
    "exclusive": true,
    "gtk-layer-shell": true,
    "modules-left": ["hyprland/workspaces", "mpris"],
    "modules-center": ["hyprland/window"],
    "modules-right": [ "network", "idle_inhibitor", "custom/power_profile", "pulseaudio", "battery", "clock", "tray"],
    "hyprland/window": {
        "format": "{}",
        "rewrite": {
          "(.*) — Mozilla Firefox": "🌎 $1",
          "(.*) — Zen Browser": "🌎 $1"
        }
    },

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "on-click": "activate",
        "format": "{icon}",
        "format-icons": {
            "1": "一",
            "2": "二",
            "3": "三",
            "4": "四",
            "5": "五",
            "6": "六",
            "7": "七",
            "8": "八",
            "9": "九",
            "10": "十"
        },
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": [],
        },
    },

    "custom/power_profile": {
        //shows the current power profile and switches to next on click
        "exec": "/run/current-system/sw/bin/asusctl profile -p | sed -n 's/^.*Active profile is //p'",
        "interval": 30,
        "format": "󰈐 {}",
        "on-click": "/run/current-system/sw/bin/asusctl profile -n; /run/current-system/sw/bin/pkill -SIGRTMIN+8 .waybar-wrapped",
        "signal": 8
    },

    "tray": {
        "icon-size": 14,
        "spacing": 10
    },

    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": " {:%H:%M}",
        "format-alt": " {:%a %F}"
    },

    "mpris": {
      "format": "{status_icon} {dynamic}",
      "interval": 1,
      "dynamic-len": 60,
      "status-icons": {
        "playing": "",
        "paused": "",
        "stopped": ""
      },
      "dynamic-order": ["title", "artist"],
      "ignored-players": ["firefox"]
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": " ",
            "deactivated": " "
        }
    },

    "backlight": {
        "format": "{icon} {percent}%",
        "format-icons": ["", "", "", "", "", "", "", "", ""]
    },

    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-full": "{icon} {capacity}%",
        "format-charging": "󰃨 {capacity}%",
        "format-plugged": " {capacity}%",
        "format-alt": "{icon} {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": [" ", " ", " ", " ", " "]
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": " ",
        "on-click": "/run/current-system/sw/bin/pamixer -t",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "/run/current-system/sw/bin/pamixer -i 5",
        "on-scroll-down": "/run/current-system/sw/bin/pamixer -d 5",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", " "]
        }
    },
    
    "temperature": {
        "thermal-zone": 0,
        "format": "{temperatureC}°C ",
        "critical-threshold": 80,
        "format-critical": "{temperatureC}°C "
    },

    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "󰖩",
        "format-ethernet": "󰈁",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "󱛅",
        "format-alt": "{ipaddr}/{cidr}"
    },

    "bluetooth": {
	    "format": " {status}",
	    "format-disabled": "", // an empty format will hide the module
	    "format-connected": " {num_connections}",
	    "tooltip-format": "{device_alias}",
	    "tooltip-format-connected": " {device_enumerate}",
	    "tooltip-format-enumerate-connected": "{device_alias}"
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "",
        "format-source-muted": " ",
        "on-click": "/run/current-system/sw/bin/pamixer --default-source -t",
        "on-scroll-up": "",
        "on-scroll-down": "",
        "scroll-step": 0
    }
}
